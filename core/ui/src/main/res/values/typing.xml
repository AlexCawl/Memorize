<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Font" />

    <style name="Font.LargeTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Font.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.ActionBar" parent="Font.LargeTitle" />

    <style name="Text.ActionBar.OnPrimary">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>
</resources>